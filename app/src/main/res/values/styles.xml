<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ActiveBottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/avenir_next_bold</item>
    </style>

    <style name="InactiveBottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/avenir_next_regular</item>
    </style>

    <style name="BoldTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/avenir_next_bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="RegularTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="LightTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:fontFamily">@font/avenir_next_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/avenir_next_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="strokeColor">@color/colorPrimaryText</item>
    </style>

    <style name="BoldTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/avenir_next_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

</resources>